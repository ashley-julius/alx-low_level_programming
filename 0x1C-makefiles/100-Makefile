# variables
CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
.PHONY: all
all : $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY : clean
clean :
	$(RM) *~ $(NAME)

.PHONY: oclean
oclean :
	$(RM) $(OBJ)

.PHONY: fclean
fclean : clean
	$(RM) $(NAME)

.PHONY: re
re : fclean all
	$(CC) $(CLAGS) -c $(SRC)

# Dependencies
$(OBJ): m.h
